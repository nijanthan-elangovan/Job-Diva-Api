{
    "name": "jobdiva-api-mcp-server",
    "version": "1.0.0",
    "description": "MCP server for Job Diva API documentation",
    "type": "module",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc && npm run copy-data",
        "copy-data": "node -e \"require('fs').copyFileSync('../endpoints.json', './build/endpoints.json')\"",
        "start": "node build/index.js",
        "dev": "tsc && npm run copy-data && node build/index.js"
    },
    "keywords": [
        "mcp",
        "jobdiva",
        "api"
    ],
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0"
    }
}