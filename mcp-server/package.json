{
  "name": "jobdiva-api-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Job Diva API documentation - makes API endpoints easily accessible to Claude and other AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jobdiva-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-data",
    "copy-data": "node -e \"import('fs').then(fs => fs.default.copyFileSync('../endpoints.json', './dist/endpoints.json'))\"",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jobdiva",
    "api",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.2"
  }
}
